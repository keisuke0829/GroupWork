var connection = require('./mod_mysqlConn');

var OpStatus = function(status) {
	this.status = status;

	this.getStatus = function() {
		var st;
		connection.query('SELECT * FROM T000MCL WHERE PAGE_ID = ?',[status] , function(err, result, fields) {
			st = result[0].OP_STATUS;
		})
		connection.end();
		console.log(st)
		return st;
	}
}

module.exports = OpStatus;