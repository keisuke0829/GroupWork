<% layout('layout') -%>

<div class="container">
	<div class="title">
		<h2><%= message %></h2>
	</div>

	<form method="post">
		<div class="form-group">
			<label for="userName">メンバー名</label>
			<input type="text" class="form-control" id="userName" name="userName" placeholder="Enter name">
		</div>
		<div class="form-group">
			<label for="password">パスワード</label>
			<input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
		</div>
		<button type="submit" class="btn btn-primary">ログイン</button>
	</form>
	<% if (typeof noUser !== 'undefined') { %>
	<p class="error"><%= noUser %></p>
	<% } %>
</div>

<% block("header_scripts","<link rel='stylesheet' href='/public/stylesheets/login.css' />") -%>
<% block("footer_script1","") -%>
<% block("footer_script2","<script type='text/javascript' src='/public/javascripts/login.js'></script>") -%>