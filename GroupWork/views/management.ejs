<% layout('layout') -%>

<div class="container">
	<div class="title">
		<h1><%= message %></h1>
	</div>

	<form action="">
		<div class="form-group">
			<ul class="list-group">
				<% pageList.forEach(function(pageItem) { %>
					<% if (pageItem.OP_STATUS === '1') { %>
						<li class="list-group-item list-group-item-info">
							<div class="checkbox">
								<label><input type="checkbox" id="<%= pageItem.PAGE_ID %>"><%= pageItem.PAGE_ID %></label>
							</div>
						</li>
					<% } else { %>
						<li class="list-group-item list-group-item-danger">
							<div class="checkbox">
								<label><input type="checkbox" id="<%= pageItem.PAGE_ID %>"><%= pageItem.PAGE_ID %></label>
							</div>
						</li>
					<% } %>
				<% }); %>
			</ul>
		</div>
		<button class="btn btn-primary">変更</button>
	</form>
</div>

<% block("header_scripts","<link rel='stylesheet' href='/public/stylesheets/management.css' />") -%>
<% block("footer_script1","") -%>
<% block("footer_script2","<script type='text/javascript' src='/public/javascripts/management.js'></script>") -%>
