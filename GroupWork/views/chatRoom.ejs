<% layout('layout') -%>

<div class="container">
	<div class="title">
		<h2>Room No :<%= message %></h2>
	</div>

	<div class="msgPanel"></div>

	<div class="form-group">
		<label class="control-label">メッセージを入力してください</label>
		<textarea class="form-control" id="msg" rows="3" cols="30"></textarea>
		<input id="roomNo" hidden="true" value="<%= message %>" />
		<input id="userId" hidden="true" value="<%= userId %>" />
		<input id="userName" hidden="true" value="<%= userName %>" />
		<button class="btn btn-primary" type="button" id="send" value="<%= message %>">
			<span class="glyphicon glyphicon-pencil"> messageSend</span>
		</button>
	</div>
</div>

<% block("header_scripts","<link rel='stylesheet' href='/public/stylesheets/chatRoom.css' />") -%>
<% block("footer_script1","<script type='text/javascript' src='https://localhost:8888/socket.io/socket.io.js'></script>") -%>
<% block("footer_script2","<script type='text/javascript' src='/public/javascripts/chatRoom.js'></script>") -%>
